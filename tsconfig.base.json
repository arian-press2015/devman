{
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "importHelpers": true,
        "baseUrl": ".",
        "isolatedModules": true,
        "lib": ["es2022"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es2022",
        "paths": {
            "@devman/core": ["packages/core/src/index.ts"]
        }
    }
}
